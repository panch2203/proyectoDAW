{{#each @plays as |play|}}
  <div class="perfilTweet">
   	<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a7/React-icon.svg/640px-React-icon.svg.png" class="spinning">
    <p class="textobold">Nombre del usuario: {{play.user_id}}</p>
    <select onChange={{action this.onChange value="target.value"}} >
    	<option value="" disabled selected hidden>Choose a value...</option>
  		<option value="1">Rock</option>
  		<option value="2">Paper</option>
  		<option value="3">Scissors</option>
  		<option value="4">Lizard</option>
  		<option value="5">Spock</option>
	</select>
    <p class="textobold">HOLA {{play.game_id}}</p>
    <button {{action this.onSubmit play.user_id play.game_id play.id }}>
    Submit!
    </button>
    {{#if (eq this.args.winner play.user_id)}}
    	<p>Gan√≥</p>
    {{/if}}


  </div>
    

{{/each}}
